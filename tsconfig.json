{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "netlify/functions",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false
  },
  "include": [
    "netlify/functions/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
